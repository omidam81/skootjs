    #home-section1
      .section-inner
        .container
          .switcher
            a.active(href='') Candidate
            a(href='') Employer
          .clearfix
          h1.text-center.main-title Search From Thousands of Jobs in Malaysia
          h3.text-center.sub-title Join Over 250,000 Candidates Today
          .text-center
            a.btn.btn-danger.join-now(href='') Join Now
      a.goto-btn(onclick="scrollToContent('#home-section2')")
        i.icon-down-open
      .search
        .container
          .row
            .col-xs-12.col-sm-12.col-md-12.col-lg-10.col-md-push-0.col-lg-push-1
              .row
                .col-xs-12.col-sm-4.col-md-5.col
                  input.form-control(name='keywords', type='text', placeholder='Enter job title or keywords')
                  i.icon-search(aria-hidden='true')
                .col-xs-12.col-sm-4.col-md-5.col
                  input.form-control(type='text', placeholder='Location', autocomplete='off')
                  i.icon-location(aria-hidden='true')
                .col-xs-12.col-sm-4.col-md-2
                  button.btn.btn-danger.btn-block Job Search
    #home-section2
      .container
        h2.section-title.text-center Employers hiring right now
        h5.text-center.description Among some of Malaysia’s top employers posting vacancies on our platform
        .owl-carousel.home-logo
          img(src='images/companies/1-min.png', alt='')
